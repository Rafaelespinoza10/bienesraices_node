extends ./layout/app

block contenido 

            h2(class="text-center text-4xl font-extrabold pt-10")= pagina

            if propiedades.length 
                div(class="grid grid-cols-1 lg:grid-cols-2 gap-5 mt-10")
                    each propiedad in propiedades  
                        div(class="bg-white shadow rounded-lg")
                            img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`imagen casa ${propiedad.titulo}`)
                            div(class="p-5 space-y-2")
                                h3(class="text-2xl font-bold")= propiedad.titulo 
                                
                                div(class="py-2 md:flex md:gap-4")
                                    p.text-sm.font-bold.flex.items-center
                                        svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="width: 24px; height: 24px;")
                                                path(stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z")
                                    = propiedad.precio.nombre
                                
                                p(class="text-sm text-gray-600") Ubicacion:   
                                    span(class="text-gray-800 font-bold")= propiedad.calle
                                p(class="text-sm text-gray-600") Habitaciones:  
                                    span(class="text-gray-800 font-bold")= propiedad.habitaciones
                                p(class="text-sm text-gray-600") Ba√±os:   
                                    span(class="text-gray-800 font-bold")= propiedad.wc
                                p(class="text-sm text-gray-600") Estacionamientos:    
                                    span(class="text-gray-800 font-bold")= propiedad.estacionamiento
                                
                                div(class="py-5 grid place-content-center")
                                    a(href=`/propiedad/${propiedad.id}` class="bg-indigo-600 w-full text-center font-bold uppercase mt-5 py-2 px-10 text-white rounded") Ver Propiedad


            else 
                p(class="text-center text-gray-800 text-sm py-10") No Existen Resultados
